        <%=Model%>.findOne({<%=id%>:req.params.<%=id%>}).exec().then(function (item) {
            if (!item) {
                res.sendStatus(404);
                return next();
            }
            item.<%=subModelAttribute%>.id(req.params.<%=id%>).remove();
            item.save(function (saveErr) {
                return next(saveErr);
            });
            <%=formatSuccessResponse(method.responses, 'item')%>
            return next();
        }).then(null, function (err) {
            return next(err);
        });
